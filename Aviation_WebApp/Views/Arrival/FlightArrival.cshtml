@model FlightRoot


<style>
    body {
            background-image: url("https://qph.cf2.quoracdn.net/main-qimg-2b2bd1c8e5699cbe26a8948c7b857751.webp");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            background-size: cover;
    }
    div{
        font-family: "consolas";  
    }

    tr:hover td{
       
        background-color: goldenrod;}
</style>


<div>
<h1><strong>Arrivals</strong></h1>
<table class="table"; style="border-style: groove;">
    <tr style="background-color: gold;">
        <th>Arrival Time</th>
        <th>Carrier</th>
        <th>Flight #</th>
        <th>Origin Airport</th>
        <th>Flight Length(mins)</th>
        <th>Status</th>
        
    </tr>
    @foreach (var item in @Model.response)
    {
        <tr style="background-color: antiquewhite;"> <!--"background-color: #f2f2f2;"-->
            <td>@item.arr_time</td>
            <td>@item.airline_iata</td>
            <td>@item.flight_iata</td>
            <td>@item.dep_iata</td>
            <td>@item.duration</td>
            <td>@item.status</td>
        </tr>
    }
</table>
</div>
